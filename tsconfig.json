{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "lib": [
      "es2022"
    ]
  },
  // "include": [
  //   "**/*.ts",
  //   "**/*.tsx"
  // ],
  // "exclude": [
  //   "node_modules"
  // ]
}
